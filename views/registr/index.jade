extends ../layout

block content_style
	link(rel='stylesheet', type='text/css', href='/build/css/auth.css')

block content
	.title Регистрация
	form(action='/registr', method='post')
		.form_title Email:
		input(type='text', name='email', placeholder='john@appleseed.com')
		.form_title Логин:
		input(type='text', name='login', placeholder='john')
		.form_title Пароль
		input(type='password', name='password')
		br
		input(type='submit', value='Отправить!')